{
  "name": "second-brain-agent",
  "version": "0.1.0",
  "description": "DM-only Slack front door for personal knowledge management using Bedrock AgentCore",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy": "cdk deploy --all",
    "deploy:ingress": "cdk deploy SecondBrainIngressStack",
    "deploy:core": "cdk deploy SecondBrainCoreStack",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\""
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "aws-cdk": "^2.170.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.0",
    "fast-check": "^3.23.0",
    "prettier": "^3.4.0",
    "typescript": "~5.6.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@aws-sdk/client-codecommit": "^3.700.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-ses": "^3.700.0",
    "@aws-sdk/client-sqs": "^3.700.0",
    "@aws-sdk/client-ssm": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
